{
  "name": "Elixir Development",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/erlang:1": {
      "version": "25"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "elixir-lsp.elixir-ls",
        "jakebecker.elixir-ls"
      ]
    }
  },
  "postCreateCommand": "apt-get update && apt-get install -y elixir && elixir --version",
  "remoteUser": "root"
}
